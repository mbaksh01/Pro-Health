@inherits LayoutComponentBase

@if (NavigationManager.Uri.EndsWith("login"))
{
    @Body
}
else
{
    <main>
        <div class="top-bar">
            <p @onclick="@(() => Navigate("/"))">Pro-Health</p>
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" width="3rem" height="3rem" viewBox="0 0 24 24" fill="none">
                    <path d="M12.12 12.78C12.05 12.77 11.96 12.77 11.88 12.78C10.12 12.72 8.71997 11.28 8.71997 9.50998C8.71997 7.69998 10.18 6.22998 12 6.22998C13.81 6.22998 15.28 7.69998 15.28 9.50998C15.27 11.28 13.88 12.72 12.12 12.78Z" stroke="#fff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M18.74 19.3801C16.96 21.0101 14.6 22.0001 12 22.0001C9.40001 22.0001 7.04001 21.0101 5.26001 19.3801C5.36001 18.4401 5.96001 17.5201 7.03001 16.8001C9.77001 14.9801 14.25 14.9801 16.97 16.8001C18.04 17.5201 18.64 18.4401 18.74 19.3801Z" stroke="#fff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="#fff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <p>Avenue Medical Practice</p>
            </div>
        </div>
        <div class="side-bar-content-container">
            <div class="side-bar">
                <div class="nav-menu">
                    <div id="medical-records-menu" class="parent open">
                        <div @onclick="@(() => Toggle("medical-records-menu"))">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" width="1.5rem" height="1.5rem" viewBox="0 0 24 24">
                                <path d="M9.343 18.657a1 1 0 0 1-.707-1.707l4.95-4.95-4.95-4.95a1 1 0 0 1 1.414-1.414l5.657 5.657a1 1 0 0 1 0 1.414l-5.657 5.657a1 1 0 0 1-.707.293z" />
                            </svg>
                            <p @onclick="@(() => Navigate(""))">Medical Records</p>
                        </div>
                        <div class="child">
                            <div id="medical-records-search-menu" class="parent open">
                                <div @onclick="@(() => Toggle("medical-records-search-menu"))">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" width="1.5rem" height="1.5rem" viewBox="0 0 24 24">
                                        <path d="M9.343 18.657a1 1 0 0 1-.707-1.707l4.95-4.95-4.95-4.95a1 1 0 0 1 1.414-1.414l5.657 5.657a1 1 0 0 1 0 1.414l-5.657 5.657a1 1 0 0 1-.707.293z" />
                                    </svg>
                                    <p @onclick="@(() => Navigate("/medical-records/search"))">Search</p>
                                </div>
                                <div class="child">
                                    <p @onclick="@(() => Navigate("/medical-records/search/history"))">History</p>
                                </div>
                            </div>
                            <p @onclick="@(() => Navigate("/medical-records/details"))">Details</p>
                            <p @onclick="@(() => Navigate("/medical-records/create"))">Create</p>
                        </div>
                    </div>
                    <div id="appointments-menu" class="parent open">
                        <div @onclick="@(() => Toggle("appointments-menu"))">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" width="1.5rem" height="1.5rem" viewBox="0 0 24 24">
                                <path d="M9.343 18.657a1 1 0 0 1-.707-1.707l4.95-4.95-4.95-4.95a1 1 0 0 1 1.414-1.414l5.657 5.657a1 1 0 0 1 0 1.414l-5.657 5.657a1 1 0 0 1-.707.293z" />
                            </svg>
                            <p @onclick="@(() => Navigate(""))">Appointments</p>
                        </div>
                        <div class="child">
                            <div id="appointments-search-menu" class="parent open">
                                <div @onclick="@(() => Toggle("appointments-search-menu"))">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" width="1.5rem" height="1.5rem" viewBox="0 0 24 24">
                                        <path d="M9.343 18.657a1 1 0 0 1-.707-1.707l4.95-4.95-4.95-4.95a1 1 0 0 1 1.414-1.414l5.657 5.657a1 1 0 0 1 0 1.414l-5.657 5.657a1 1 0 0 1-.707.293z" />
                                    </svg>
                                    <p @onclick="@(() => Navigate("/appointments/search"))">Search</p>
                                </div>
                                <div class="child">
                                    <p>History</p>
                                </div>
                            </div>
                            <p @onclick="@(() => Navigate("/appointments/create"))">Create</p>
                        </div>
                    </div>
                </div>
                <div class="footer">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" width="2rem" height="2rem" viewBox="0 0 256 256" xml:space="preserve" @onclick="ToggleSideBar" class="rotate">
                    <g style="stroke: #fff; stroke-width: 0; stroke-dasharray: none; stroke-linecap: butt; stroke-linejoin: miter; stroke-miterlimit: 10; fill: #fff; fill-rule: nonzero; opacity: 1;" transform="translate(1.4065934065934016 1.4065934065934016) scale(2.81 2.81)">
                    <polygon points="39.64,90 35.36,85.72 76.08,45 35.36,4.28 39.64,0 84.64,45 " style="stroke: inherit; stroke-width: 1; stroke-dasharray: none; stroke-linecap: butt; stroke-linejoin: miter; stroke-miterlimit: 10; fill: inherit; fill-rule: nonzero; opacity: 1;" transform="  matrix(1 0 0 1 0 0) " />
                    <polygon points="9.64,90 5.36,85.72 46.08,45 5.36,4.28 9.64,0 54.64,45 " style="stroke: inherit; stroke-width: 1; stroke-dasharray: none; stroke-linecap: butt; stroke-linejoin: miter; stroke-miterlimit: 10; fill: inherit; fill-rule: nonzero; opacity: 1;" transform="  matrix(1 0 0 1 0 0) " />
                        </g>
                    </svg>
                </div>
            </div>
            <div class="body-container">
                @Body
            </div>
        </div>
    </main>
}
