@page "/medical-records/details"
@page "/medical-records/details/{Id:guid}"

<PageTitle>Pro-Health - Medical Records - Details</PageTitle>

<Breadcrumbs Crumbs="_breadcrumbs" />

<div class="main-container">
    <div class="main-details">
        <div class="column-1">
            <div>
                <EditDetails Title="General" FieldValues="_generalValues" ValueChanged="Update"></EditDetails>
            </div>
            <div>
                <EditDetails Title="Address" FieldValues="_addressValues"></EditDetails>
            </div>
        </div>
        <div>
            <EditDetails Title="Contact Information" FieldValues="_contactInfoValues"></EditDetails>
        </div>
        <div class="column-3">
            <h3>Notes</h3>
            <textarea name="notes-input" @bind="_medicalRecord.Notes" />
        </div>
    </div>
    <hr />
    <div class="lab-results">
        <h3>Lab Results</h3>
        <div class="results-container">
            <div>
                <h4>New Results</h4>
                <Table Headers="_resultsHeaders" Rows="_newResults"></Table>
            </div>
            <div>
                <h4>Pending Results</h4>
                <Table Headers="_resultsHeaders" Rows="_pendingResults"></Table>
            </div>
        </div>
    </div>
</div>
