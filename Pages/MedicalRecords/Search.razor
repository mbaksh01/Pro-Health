        {
            new()
            {
                Name = "Medical Records",
                Link = "/medical-records"
            },
            new()
            {
                Name = "Search",
                Link = "/medical-records/search"
            },
        };

        headers = new[]
        {
            "Family Name",
            "Forename",
            "Date of Birth",
            "Postcode",
            "Address"
        };

        rows = new string[][]
        {
