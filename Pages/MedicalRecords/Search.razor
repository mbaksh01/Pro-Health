@page "/medical-records/search"

<PageTitle>Pro-Health - Medical Records - Search</PageTitle>

<Breadcrumbs Crumbs="breadcrumbs" />

<div class="search-options">
    <input type="text" placeholder="Enter Patient Family Name" style="grid-column: 1" />
    <input type="text" placeholder="Enter Patient First Name" style="grid-column: 2" />
    <input type="date" placeholder="Date Of Birth" style="grid-column: 3" />
    <p style="grid-column: 4">Click a family name to view the patient's details.</p>
</div>

<Table Headers="headers" Rows="rows">

</Table>

